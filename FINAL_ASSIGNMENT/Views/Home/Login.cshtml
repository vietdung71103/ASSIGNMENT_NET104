@model FINAL_ASSIGNMENT.Models.User
@using Microsoft.AspNetCore.Http

@{
	ViewData["Title"] = "Login";
	Layout = null;
}
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/FINAL_ASSIGNMENT.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
<section class="">
	<!-- Jumbotron -->
	<div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
		<div class="container">
			<div class="row gx-lg-5 align-items-center">
				<div class="col-lg-6 mb-5 mb-lg-0">
					<h1 class="my-5 display-3 fw-bold ls-tight">
						The best offer <br />
						<span class="text-primary">for your business</span>
					</h1>
					<p style="color: hsl(217, 10%, 50.8%)">
						Lorem ipsum dolor sit amet consectetur adipisicing elit.
						Eveniet, itaque accusantium odio, soluta, corrupti aliquam
						quibusdam tempora at cupiditate quis eum maiores libero
						veritatis? Dicta facilis sint aliquid ipsum atque?
					</p>
				</div>

				<div class="col-lg-6 mb-5 mb-lg-0">
					<div class="card">
						<div class="card-body py-5 px-md-5">
							<form asp-action="Login">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<!-- 2 column grid layout with text inputs for the first and last names -->
								<div class="row">
									<div class="d-flex align-items-center mb-3 pb-1">
										<i class="bx bxs-book fa-2x me-3" style="color: #ff6219;"></i>
										<span class="h1 fw-bold mb-0">Login</span>
									</div>
									<div class="form-outline mb-4">
										<label asp-for="Username" class="form-label control-label"></label>
										<input asp-for="Username" class="form-control" />
										<span asp-validation-for="Username" class="text-danger"></span>
									</div>
									<div class="form-outline mb-4">
										<label asp-for="Password" class="form-label control-label"></label>
										<input asp-for="Password" class="form-control" type="password" />
										<span asp-validation-for="Password" class="text-danger"></span>
									</div>
									<input asp-action="Login" type="submit" class="btn btn-info" value="Login" />
									<a class="small text-muted" href="">Forgot password?</a>
									<p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a asp-action="Register" style="color: #393f81;">Register here</a></p>
									<div class="alert alert-warning" role="alert" style="visibility:hidden">
										@ViewBag.LoginFail
									</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Jumbotron -->
</section>
