@model FINAL_ASSIGNMENT.Models.User
@using FINAL_ASSIGNMENT.Models
@using FINAL_ASSIGNMENT.Service.Implement
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var user = SessionService.GetUserFromSession(HttpContextAccessor.HttpContext.Session, "SaveLogin") as FINAL_ASSIGNMENT.Models.User;
    var role = ViewBag.Role as FINAL_ASSIGNMENT.Models.Role;
}
@{
    ViewData["Title"] = "Profile";
}
<style>
    #edit{
        padding: 10px 15px;
        background: white;
        border: 0.5px solid black;
        border-radius: 10px;
        color: black;
        font-weight: 500;
        margin-top: 20px;
    }

    #edit:hover{
        background: aliceblue;
        color: darkslategrey;
        transition: .3s;
    }
</style>
 <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Thông tin tài khoản</div>
    
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                            <img src="@user.Avatar" alt="Avatar" class="img-thumbnail" style="max-width: 200px;">
                            </div>
                            <div class="col-md-8">
                                <h4>@user.FullName</h4>
                            <p><strong>Email:</strong>@user.Email</p>
                            <p><strong>Role:</strong>
                               @role.RoleName
                            </p>
                            <p><strong>Status:</strong>@(user.Status == 1 ? "Hoạt động" : "Không hoạt động")</p>
                            <a asp-action="EditUser" asp-route-id="@user.Id" id="edit">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
