@using FINAL_ASSIGNMENT.Models
@using FINAL_ASSIGNMENT.Service.Implement
@inject IHttpContextAccessor HttpContextAccessor
@{
	var user = SessionService.GetUserFromSession(HttpContextAccessor.HttpContext.Session, "SaveLogin") as FINAL_ASSIGNMENT.Models.User;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>FINAL_ASSIGNMENT | @ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/FINAL_ASSIGNMENT.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
</head>
<body>
	<header>

		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" id="menuHeader">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FINAL_ASSIGNMENT</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index" id="bb123">TRANG CHỦ</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="ProductAdmin" asp-action="Index" id="bb123">SẢN PHẨM</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="RoleAdmin" asp-action="Index" id="bb123">CHỨC VỤ</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Privacy" id="bb123">TÀI KHOẢN</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="BillAdmin" asp-action="Index" id="bb123">HOÁ ĐƠN</a>
						
						</li>
						@*<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ShowOld" id="bb123">Show Old</a>
						</li>*@
						
					</ul>
					<form class="form-inline my-2 my-lg-0">

						@{
							if (user != null)
							{
								<div class="dropdown">
									<button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false" style="width: 200px; height: 50px; background-color: white;color: black ; border: 0.5px solid gray">
										Xin chào: <h6 style="display: inline;">@user.FullName</h6>
									</button>
									<div class="dropdown-menu">
										<a asp-action="Profile" class="dropdown-item">My Profile</a>
										<a asp-action="" class="dropdown-item">Change Password</a>
										<a asp-action="" class="dropdown-item">Cart</a>
										<div class="dropdown-divider"></div>
										<a asp-action="LogOut" asp-controller="Home" asp-area="" class="dropdown-item">Logout</a>
									</div>
								</div>
							}
						}
						@{
							if (user == null)
							{
								<ul class="navbar-nav flex-grow-1">
									<li class="nav-item">
										<a class="nav-link" asp-action="Login">Login</a>
									</li>
								</ul>
							}
						}
					</form>
				</div>
			</div>
		</nav>
	</header>
	<div class="">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - FINAL_ASSIGNMENT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;1,500&display=swap"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>